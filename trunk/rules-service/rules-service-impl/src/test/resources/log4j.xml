<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="rules-service" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%c] %m%n" />
		</layout>
	</appender>
	
	<logger name="net.sourceforge.rules.service">
		<level value="TRACE" />
		<appender-ref ref="rules-service" />
	</logger>
</log4j:configuration>
